<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <org.easy.ui.viewpager.TabViewpager
        android:id="@+id/tab_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray" />
    <RadioGroup
        android:id="@+id/rg_main_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rg_daily_selection"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/main_tab_daily_selection_selector"
            android:checked="true"
            android:text="@string/daily_selection" />

        <RadioButton
            android:id="@+id/rg_discovery"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/main_tab_discovery_selector"
            android:text="@string/discovery" />

        <RadioButton
            android:id="@+id/rg_popular"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/main_tab_popular_selector"
            android:text="@string/hot" />
    </RadioGroup>

</LinearLayout>
